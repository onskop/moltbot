{
  "gateway": {
    "port": 18789,  // Default; we'll override with env in Railway
    "host": "0.0.0.0",  // Listen on all interfaces for cloud access (instead of localhost)
    "auth": {
      "mode": "token",  // Or "password" for simple pass; requires approval for connections
      "token": "${MOLTBOT_AUTH_TOKEN}"  // Make this long/random; used for UI/access
    },
    "tailscale": {
      "mode": "off"  // Set to "serve" for private Tailscale access, or "funnel" for public with auth
    },
    "controlUi": {
      "allowInsecureAuth": false  // Enforce secure auth
    },
    "dmPolicy": "pairing"  // Requires manual approval for new messages/channels
  },
  "agents": {
    "defaults": {
      "sandbox": {
        "mode": "non-main"  // Sandbox non-core tasks for security
      }
    }
  }
}
